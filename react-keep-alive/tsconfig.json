{
  "compilerOptions": {
    "jsx": "react",
    "target": "esnext",
    "module": "commonjs",
    "importHelpers": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictNullChecks": true,
    "skipLibCheck": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "typeRoots": ["./node_modules/@types", "./typings"],
    "plugins": [],
    "paths": {
      "$src/*": ["src/*"]
    }
  },
  "exclude": [
    "public",
    "node_modules",
    "build",
    "scripts",
    "dist",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "static/build",
    "resources",
    "dist"
  ]
}
